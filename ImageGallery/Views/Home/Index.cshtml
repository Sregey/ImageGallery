@{
    ViewBag.Title = "Image Gallery";
}

<div class="row">
    @foreach (var image in ViewBag.Images)
    {
        @*<a href="/Images/img_1.jpg" data-lightbox="example-1">
            <img src="/Images/img_1.jpg" />
        </a>*@

        <a href="@Url.Content("~/Images/")@image.FileName" data-lightbox="@image.FileName">
            <img src="@Url.Content("~/Images/")@image.FileName" class="gallery-image col-lg-3 col-md-4 col-sm-6 col-xs-12" />
        </a>
    }
</div>

<div class="row pagination" style="display: block;">
    @if (ViewBag.PrevOffset != -1)
    {
        <div class="col-xs-6 text-right">
            @Html.ActionLink("prev", "Index", new { offset = ViewBag.PrevOffset, count = ViewBag.Count }, new { @class = "btn btn-default" })
        </div>
    }
    else
    {
        <div class="col-xs-6 text-right disabled">
            <span class="btn btn-default">prev</span>
        </div>
    }

    @if (ViewBag.NextOffset != -1)
    {
        <div class="col-xs-6">
            @Html.ActionLink("next", "Index", new { offset = ViewBag.NextOffset, count = ViewBag.Count }, new { @class = "btn btn-default" })
        </div>
    }
    else
    {
        <div class="col-xs-6 disabled">
            <span class="btn btn-default">next</span>
        </div>
    }
</div>
